{
  "manifest_version": 3,
  "name": "TaskPilot",
  "version": "1.0",
  "description": "A productivity extension for task tracking and meeting manage",
  "permissions": ["storage", "tabs", "alarms"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TaskPilot"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self'"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
